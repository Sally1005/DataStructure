<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 与对应接口的全路径严格对应-->
<mapper namespace="com.lonton.binarytree.mapper.TreeNodeMapper">
    <!-- List<BinaryTree.TreeNode> list(); -->
    <select id="list" resultMap="ListItemResultMap">
        SELECT
        <include refid="ListItemQueryFields" />
        FROM
        fruit
        ORDER BY
        level
        asc
    </select>
    <sql id="ListItemQueryFields">
        <if test="true">
            id,
            data,
            left_node,
            right_node,
            level,
            parent_id
        </if>
    </sql>

    <resultMap id="ListItemResultMap" type="com.lonton.binarytree.tree.pojo.vo.TreeNodeListItemVO">
        <id column="id" property="id"/>
        <result column="data" property="data"/>
        <result column="left_node" property="leftNodeId"/>
        <result column="right_node" property="rightNodeId"/>
        <result column="level" property="level"/>
        <result column="parent_id" property="parentId"/>
    </resultMap>

</mapper>
